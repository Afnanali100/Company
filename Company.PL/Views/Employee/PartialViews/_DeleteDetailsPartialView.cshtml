@model EmployeeViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<input hidden  asp-for="@Model.ImageName"  />

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.Name"></label>
    <input class="form-control" asp-for="@Model.Name" readonly />
</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.Age"></label>
    <input class="form-control" asp-for="@Model.Age" readonly />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Image"></label>
    <br/>
    <img src="~/Files/Images/@Model.ImageName" class="image-fluid rounded" alt="Employee Image" height="90" width="90" />
</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.Address"></label>
    <input class="form-control" asp-for="@Model.Address" readonly />
</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.Salary"></label>
    <input class="form-control" asp-for="@Model.Salary" readonly />

</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.Email"></label>
    <input class="form-control" asp-for="@Model.Email" readonly />
</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.PhoneNumber"></label>
    <input class="form-control" asp-for="@Model.PhoneNumber" readonly />
</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.HireDate"></label>
    <input class="form-control" asp-for="@Model.HireDate" readonly />
</div>

<div class=" form-group">
    <label class="col-form-label" asp-for="@Model.IsActive"></label>
    <input class="form-control" asp-for="@Model.IsActive" readonly />
</div>


