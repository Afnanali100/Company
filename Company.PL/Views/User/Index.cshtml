@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>

<br />
</br>

<div class="row justify-content-center align-content-center">
    <form class="row col-8 offset-1">
        <div class="col-8 ">
            <input type="text" class="form-control" name="email" placeholder="Enter The User Email" />
        </div>
        <div class="col-4 ">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>

</div>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u=>u.Id)  </td>
                <td>@Html.DisplayNameFor(u=>u.FName)  </td>
                <td>@Html.DisplayNameFor(u=>u.LName) </td>
                <td>@Html.DisplayNameFor(u=>u.Email)  </td>
                <td>@Html.DisplayNameFor(u=>u.PhoneNumber)  </td>
                <td>@Html.DisplayNameFor(u=>u.Roles)  </td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(",",user.Roles)</td>
             
                    <partial name="_ButtonPartialView" model="@user.Id">

                </tr>
            }

        </tbody>

    </table>
}

else
{
    <h2 class="mt-5 alert alert-warning">There is Not Any Role</h2>
}