@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Reset Password</h1>

<div class="agileits-top">
	<form asp-action="ResetPassword" method="post">
		
		<input class="text" type="password" asp-for="@Model.NewPassword" placeholder="Password" required="">
		<input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">

			
		<input type="submit" value="Reset">
	</form>
<div/>
	@section ValidationScriptSection{
		<partial name="_ValidationScriptsPartial" />
	}
